@model EmployeeViewModel
@{
    ViewData["Title"] = "All Employees";
}

<div class="p-2 container">
    <div class="row p-2">
        <div class="col-md-12">
    <h3>Add Employee..</h3>
        </div>
    </div>
    <div>
        <div class="fw-bold">
            <form asp-controller="Employee" asp-action="Add" method="post">
                <div class="mb-3 ">
                    <label class="form-label" for="FirstName">First Name</label>
                    <input asp-for="FirstName" type="text" class="form-control fw-bold">
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
                <div class="mb-3 ">
                    <label class="form-label" for="LastName">Last Name</label>
                    <input type="text" class="form-control fw-bold" asp-for="LastName"/>
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
                <div class="mb-3 ">
                    <label class="form-label" for="DateOfBirth">Date Of Birth</label>
                    <input type="date" class="form-control fw-bold" asp-for="DateOfBirth" >
                    <span class="text-danger" asp-validation-for="DateOfBirth"></span>
                </div>
                <div class="mb-3 ">
                    <label class="form-label" for="Gender">Gender</label>
                    <div class="d-flex">
                    <div class="form-check px-4">
                        <input asp-for="Gender" class="form-check-input" value="Male" type="radio" >
                        <label class="form-check-label fw-bold" for="Gender">
                            Male
                        </label>
                    </div>
                    <div class="form-check px-4">
                        <input asp-for="Gender" class="form-check-input" value="Female" type="radio" >
                        <label class="form-check-label fw-bold" for="Gender">
                            Female
                        </label>
                    </div>
                        <span class="text-danger" asp-validation-for="Gender"></span>
                    </div>
                </div>
                <div class="mb-3 ">
                    <label class="form-label" for="Email">Email</label>
                    <input type="email" class="form-control fw-bold" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="mb-3 ">
                    <label class="form-label" for="Phone">Phone Number</label>
                    <input type="tel" class="form-control fw-bold" asp-for="PhoneNumber">
                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Address">Address</label>
                    <textarea class="form-control fw-bold" rows="2" asp-for="Address" ></textarea>
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
                <br />
                <div>
                    <label class="form-label">Please Choose Department : </label>
                    <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="fw-bold"></select>
                </div>
                <br />
                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="isActive" checked asp-for="IsActive">
                        <label class="form-check-label fw-bold" for="isActive">Mark as Active</label> 
                    </div>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-dark fw-bold">Submit</button>
            </form>
        </div>
    </div>

</div>